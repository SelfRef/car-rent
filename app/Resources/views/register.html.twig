{% extends 'base.html.twig' %}

{% block main %}
    {{ parent() }}

    {% for flash in app.session.flashBag.get('form') %}
        <div class="alert alert-warning">
            {{ flash }}
        </div>
    {% endfor %}

    {{ form_errors(form) }}


    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
    <div class="form-group">
        {{ form_label(form.username, 'Login:', {'label_attr': {'class': 'control-label col-sm-2'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.password.first, 'Hasło:', {'label_attr': {'class': 'control-label col-sm-2'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.password.first, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.password.second, 'Powtórz hasło:', {'label_attr': {'class': 'control-label col-sm-2'}}) }}

        <div class="col-sm-10">
            {{ form_widget(form.password.second, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.password.first) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            {{ form_widget(form.add, {'label': 'Zarejestruj', 'attr': {'class': 'btn btn-primary'}}) }}
        </div>
    </div>
    {{ form_end(form) }}

{% endblock %}